  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "dev": "dotenv -e ../.env -- cross-env NODE_ENV=development nodemon --config nodemon.json",
    "migrate": "dotenv -e ../.env -- npx prisma migrate dev",
    "migrate:reset": "dotenv -e ../.env -- npx prisma migrate reset",
    "migrate:deploy": "npx prisma migrate deploy",
    "generate": "dotenv -e ../.env -- npx prisma generate",
    "studio": "dotenv -e ../.env -- npx prisma studio"
  },
